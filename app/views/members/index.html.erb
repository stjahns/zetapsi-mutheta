<% provide(:title, 'Members') %>

<h1>Active Members</h1>

<div class="row members-list">
  <% @members.each do |member| %>
    <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
      <%= link_to member, title: member.name do %>

        <div class="thumbnail member_thumb">
          <%= image_tag member.profile_photo.url(:thumb) %>
          <div class='caption'>
            <h4><%= member.name %></h4>
            <p><em><%= member.position %></em></p>
            <p>
            <% if signed_in? %>
              <%= link_to 'Edit', edit_member_path(member) %>
              <%= link_to 'Delete', member_path(member),
                method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
            </p>
          </div>
        </div>

      <% end %>
    </div>
  <% end %>
</div>

<% if signed_in? %>
  <h3>Add New Member</h3>
  <div class="container form-wrapper">

    <%= form_for @new_member do |f| %>
      <div class="form-group">
        <%= f.label :name, class: "col-sm-2 control-label text-right" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, class: "col-sm-2 control-label text-right" %>
        <div class="col-sm-10">
          <%= f.text_field :email, class: "form-control"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Add", class: "btn btn-default" %>
        </div>
      </div>
    <% end %>

  </div>

<% end %>
