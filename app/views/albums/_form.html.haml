= form_for @album do |form|

  - if @album.errors.any?
    #error_explanation
      %h2 
        = pluralize(@event.errors.count, "error")
        prohibited this album from being saved:
      %ul
        - @event.errors.full_messages.each do |msg|
          %li
            = msg

  %p 
    = form.label :title
    = form.text_field :title

  %p 
    = form.label :frontpage
    = form.check_box :frontpage

  %p
    = form.submit
