%h1
  = @event.name

%p
  %em
    = @event.start_time.strftime('%A, %B %-d')
    at
    = @event.start_time.strftime('%-I:%M %p')
    - if @event.has_end and not @event.end_time.nil?
      \-
      - if @event.end_time.to_date != @event.start_time.to_date
        = @event.end_time.strftime('%A, %B %-d')
        at
      = @event.end_time.strftime('%-I:%M %p')

%p
  = @event.description

%p
  - if can? :edit, @event
    = link_to 'Edit', edit_event_path(@event) if signed_in?
    |
  = link_to 'Back', events_path
