%h1 Events

= link_to 'New Event', new_event_path

%ul
  - @events.each do |event|
    %li
      %strong
        = event.name
      = link_to 'Show', event
      = link_to 'Edit', edit_event_path(event)
      = link_to 'Delete', event_path(event), 
        method: :delete, data: { confirgm: 'Are you sure?' }
