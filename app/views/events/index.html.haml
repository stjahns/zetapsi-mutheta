%h1 Events

%p
  = link_to 'New Event', new_event_path if signed_in?

%ul
  - @events.each do |event|
    %li
      %strong
        = event.name
      = link_to 'Show', event
      - if signed_in?
        = link_to 'Edit', edit_event_path(event)
        = link_to 'Delete', event_path(event), 
          method: :delete, data: { confirm: 'Are you sure?' }

